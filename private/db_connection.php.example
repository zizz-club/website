<?php
$host = 'localhost'; // Replace with your MariaDB host
$dbname = 'database_name'; // Replace with your database name
$username = 'root'; // Replace with your MariaDB username
$password = ''; // Replace with your MariaDB password

try {
    $pdo = new PDO("mysql:host=$host;dbname=$dbname;charset=utf8mb4", $username, $password);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    error_log("Database connection successful."); // Debugging
} catch (PDOException $e) {
    error_log("Database connection failed: " . $e->getMessage()); // Debugging
    die("Database connection failed: " . $e->getMessage());
}
?>